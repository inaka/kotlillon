<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="examples.kotlin.inaka.com">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SlidingTabsActivity"
            android:label="@string/title_activity_sliding_tabs"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.ShowUserActivity"
            android:label="@string/title_activity_show_user"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.ShowSavedUsersActivity"
            android:label="Show Saved Users"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.BrowseUrlActivity"
            android:label="@string/title_activity_browse_url"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
